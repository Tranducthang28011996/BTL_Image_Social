<% provide :title, "Login page" %>
<div class="row">
  <div class="col-md-3 col-md-offset-3">

  </div>
  <div class="col-md-4">
    <div class="login-signup-form">
      <h2>Log in</h2>

      <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <%= render "devise/errors/messages", object: f.object %>
        <div class="field email-username-login">
          <%= f.text_field :login, autofocus: true, placeholder: "Email or username" %>
          <%- if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
            <%= link_to "Forgot?", new_password_path(resource_name), class: "forgot-password" %><br />
          <% end -%>
        </div>

        <div class="field">
          <%= f.password_field :password, autocomplete: "off", placeholder: "Password" %>
        </div>

        <% if devise_mapping.rememberable? -%>
          <div class="field pull-left">
            <%= f.check_box :remember_me, checked: true %>
            <%= f.label :remember_me %>
          </div>
        <% end -%>

        <div class="actions">
          <%= f.submit "Log in" %>
        </div>
      <% end %>
    </div>

    <div class="sigup-link login-signup-form">
      <%- if devise_mapping.registerable? && controller_name != 'registrations' %>
        Don't have an account? <%= link_to "Sign up", new_registration_path(resource_name) %><br />
      <% end -%>
    </div>
  </div>
</div>
