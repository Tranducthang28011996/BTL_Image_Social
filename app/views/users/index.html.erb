  <div class="col-xs-10 search-user">
  <% case @user_search.size %>
    <% when 1 %>
    <div class="col-xs-4">
      <%= image_tag current_user.avatar, class: "avatar-search"%>
    </div>
    <div class="col-xs-8">
      <table>
      <% @user_search.each do |user| %>
        <thead>
          <tr>
            <th><%= link_to user.username,  user_path(user) %></th>
            <th>
              <button class="btn btn-default btn-sm">
                <i class="fa fa-sort-desc" aria-hidden="true"></i>
              </button>
            </th>
          </tr>
        </thead>
        <tbody>
          <tr>
            <td><%= user.photos.size %> posts</td>
            <td><%= user.followers.size %> followers</td>
            <td><%= user.followings.size %> following</td>
          </tr>
          <tr>
            <td><b><%= user.username %></b></td>
          </tr>
        </tbody>
      </table>
    </div>
  </div>
  <div class="col-xs-10 search-user">
      <% user.photos.each do |image| %>
        <div class="col-xs-4 image-search">
          <%= image_tag image.image, size: "280x280" %>
        </div>
      <% end %>
    <% end %>
      <div class="col-md-12" style="text-align: center;">
        <button class="btn btn-primary btn-sm btn-load-search"><b>Load more</b></button>
      </div>
  </div>
  <% else %>
  <% if @user_search.size > 0 %>
    <% @user_search.each do |user| %>
     <div class="row user-information">
      <div class="col-md-3 col-xs-3 col-md-offset-1 col-xs-offset-1">
        <div class="avatar-user">
          <% if user.avatar %>
            <%= image_tag user.avatar %>
          <% else %>
            <%= image_tag "http://www.lovemarks.com/wp-content/uploads/profile-avatars/default-avatar-knives-ninja.png" %>
          <% end %>
          <% if current_user == user %>
            <button type="button" class="show-icon-change-image" data-toggle="modal"
              data-target="#myModal"  data-link="<%= edit_user_path(current_user) %>">
              <%= icon "camera" %>
            </button>
          <% end %>
        </div>
      </div>

      <div class="col-md-8 col-xs-8">
        <div class="user-name">
          <h1><%= user.username %></h1>
          <div class="follow">
            <% if current_user == user %>
              <%= link_to "Edit profile", profile_path(user), class: "edit-profile" %>
              <button type="button" data-toggle="modal" data-target="#myModaledit" class="config-user">
                <%= icon "cog" %>
              </button>
              <div id="myModaledit" class="modal fade" role="dialog">
                <div class="modal-dialog">
                  <div class="modal-content">
                    <ul class="menu-show-config-user">
                    <% link = profile_path(user) + "#tab2" %>
                      <li><a href=""><%= link_to "Change Password", link %></a></li>
                      <li><a href="">Notifications</a></li>
                      <li><%= link_to "Log Out", destroy_user_session_path, method: :delete %></li>
                      <li><a href="">Cancel</a></li>
                    </ul>
                  </div>
                </div>
              </div>

            <% else %>
              <span class="block-follow">
                <%= render partial: "follow_form", locals: {user: user} %>
              </span>
              <%= link_to icon("ellipsis-h"), "#", class: "control-account" %>
            <% end %>
          </div>

          <div class="clearfix"></div>
        </div>
        <div class="photos-infor">
          <span><strong><%= user.photos.size %></strong> photos</span>
          <span><strong><%= user.followers.size %></strong> followers</span>
          <span><strong><%= user.followings.size %></strong> followings</span>
        </div>
        <div class="sologan">
          <h3><%= user.email %></h3>
        </div>
      </div>
    </div>
   <% end %>
  <% else %>
  <p>
  Ever tried. Ever failed. No matter. Try again. Fail again. Fail better.
  </p>
  <% end %>
<% end %>
