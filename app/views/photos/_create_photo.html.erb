<div class="post">
  <div class="post-header">
    <%= image_tag current_user.avatar, class: "post-avatar" %>
    <span><%= link_to current_user.username, user_path(current_user) %></span>
  </div>
  <div class="post-content text-center">
    <%= form_for @new_photos, multipart: true do |f| %>
      <%= f.file_field :image %>
      <%= f.fields_for :comments do |comment|  %>
        <%= comment.text_area :content %>
        <%= comment.hidden_field :user_id, value: current_user.id %>
      <% end %>
      <%= f.submit "upload" %>
    <% end %>
  </div>
</div>
