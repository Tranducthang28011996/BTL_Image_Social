<header>
  <nav class="navbar navbar-default header-page">
    <div class="container">
      <div class="row">
        <div class="col-md-4 col-xs-4">
          <div class="navbar-header">
          <%= link_to root_path, class: "navbar-brand logo" do  %>
            <%= icon "camera-retro" %> <span>imageFun</span>
          <% end %>
          </div>
        </div>
        <div class="col-md-4 col-xs-4 search-form">
          <input type="text" name="" placeholder="search">
          <span><%= icon "search" %></span>
        </div>
        <div class="col-md-4 col-xs-4 navigator-user">
          <div class="nav navbar-nav" >
            <% unless user_signed_in? %>
              <%= link_to "Sign up", new_user_registration_path %>
              <%= link_to "Login", new_user_session_path %>
            <% else %>
              <button class="notify-compass"></button>
              <button class="notify-like"></button>
              <%= link_to "", user_path(current_user), class:"notify-user"  %>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </nav>
</header>
