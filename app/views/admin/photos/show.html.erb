<div class="rows">
  <div class="col-lg-12">
    <h1 class="page-header">Photo Infomation</h1>
  </div>
</div>
<div class="rows">
  <div class="col-md-8 photo-item" photo-id="<%= @photo.id %>">
    <div class="panel panel-info">
      <div class="panel-heading">
        Photo
        <%= link_to "Edit", edit_admin_photo_path(@photo), class: "pull-right" %>
      </div>
      <div class="panel-body">
        <div style="text-align: center;">
          <img src="<%= @photo.image %>"
            alt="" class="img-thumbnail" style="max-width: 600px;max-height: 400px;">
        </div>
        <div style="text-align: center; padding: 5px 0px;">
          <button class="btn btn-default btn-select-images"
            style="padding: 3px 15px;font-size: 24px;">
            <i class="fa fa-camera"></i>
         </button>
         <% if @photo.deleted == 1 %>
            <button class="btn btn-primary btn-public-photo">
                Public
            </button>
          <% else %>
            <button class="btn btn-danger btn-delete-photo">
                Delete
            </button>
         <% end %>
         <%= form_for @photo do |f| -%>
            <%= f.file_field :image, style: "display:none;" %>
          <% end -%>
        </div>
        <div class="container-comments">
          <div class="list-group">
            <% @photo.comments.each do |comment| %>
              <a class="list-group-item a-comment" style="position: relative;">
                <i class="fa fa-comment fa-fw"></i> 
                <span><%= comment.user.username %>: </span>
                <span><%= comment.content %></span>
                <span class="pull-right text-muted small">
                  <em>
                    <time class="timeago"
                      datetime="<%= comment.created_at.strftime("%FT%T%z") %>">
                        <%= comment.created_at.strftime("%FT%T%z") %>
                    </time>
                  </em>
                </span>
                <i class="glyphicon glyphicon-remove"></i>
              </a>
            <% end %>
          </div>
        </div>
      </div>
      <div class="panel-footer">
        Panel Footer
      </div>
    </div>
  </div>
</div>