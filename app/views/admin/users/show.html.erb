<div class="row">
  <div class="col-lg-12">
    <h1 class="page-header">User details</h1>
  </div>
  <!-- /.col-lg-12 -->
</div>

<div class="rows">
  <div class="col-md-12">
<div class="panel panel-primary">
  <div class="panel-heading">
    User Infomation
  </div>
  <div class="panel-body">
    <table class="table">
      <thead>
        <tr>
          <th>#</th>
          <th>User name</th>
          <th>Email</th>
          <th>Current ip</th>
          <th>Current at</th>
          <th>Action</th>
        </tr>
      </thead>
      <tbody>
        <tr>
          <td><%= @user.id %></td>
          <td>
            <img src="/assets/3a9bdd452ff107dd46c8f13be9596dd6-9ea5af2562ec360253630cc6da464d9b88a3afd403f9a563f6b8ac2de15d7982.jpg" style="width: 40px;height: 40px;border-radius: 50%;margin-right: 10px;" />
            <%= @user.username %>
          </td>
          <td><%= @user.email %></td>
          <td><%= @user.current_sign_in_ip %></td>
          <td><time class="timeago" datetime="<%= @user.current_sign_in_at.strftime("%FT%T%z") %>"><%= @user.current_sign_in_at.strftime("%FT%T%z") %></time></td>
          <td><%= link_to "Edit", edit_admin_user_path(@user), class: "btn btn-success" %></td>
        </tr>
      </tbody>
    </table>
  </div>
</div>
  </div>
</div>

<div class="rows">
  <div class="col-md-12">
    <div class="panel panel-info">
      <div class="panel-heading">
        Photo histories (<%= @user.photos.count %>)
      </div>
      <div class="panel-body">
        <% @user_photos.each do |photo| %>
          <div class="col-md-4 frame-photo">
            <img src="<%= photo.image %>" alt=""
              style="width: 100%; height: 280px" class="img-thumbnail">
          </div>
        <% end %>
        <%= will_paginate @user_photos, param_name: "photo_page" %>
      </div>
    </div>
  </div>
</div>

<div class="rows">
  <div class="col-md-12">
    <div class="panel panel-info">
      <div class="panel-heading">
        Following (<%= @user.followings.count %>)
      </div>
      <div class="panel-body">
        <% @user.followings.each do |user| %>
          <span style="margin-right: 15px;">
            <img src="/assets/3a9bdd452ff107dd46c8f13be9596dd6-9ea5af2562ec360253630cc6da464d9b88a3afd403f9a563f6b8ac2de15d7982.jpg" style="width: 40px;height: 40px;border-radius: 50%;margin-right: 10px;" />
            <b><%= user.username %></b>
          </span>
        <% end %>
      </div>
    </div>
  </div>
</div>

<div class="rows">
  <div class="col-md-12">
    <div class="panel panel-info">
      <div class="panel-heading">
        Followers (<%= @user.followers.count %>)
      </div>
      <div class="panel-body">
        <% @user.followers.each do |user| %>
          <span style="margin-right: 15px;">
            <img src="/assets/3a9bdd452ff107dd46c8f13be9596dd6-9ea5af2562ec360253630cc6da464d9b88a3afd403f9a563f6b8ac2de15d7982.jpg" style="width: 40px;height: 40px;border-radius: 50%;margin-right: 10px;" />
            <b><%= user.username %></b>
          </span>
        <% end %>
      </div>
    </div>
  </div>
</div>

<div class="rows">
  <div class="col-md-12">
    <div class="panel panel-default">
      <div class="panel-heading">
        Comment histories (<%= @user.comments.count %>)
      </div>
      <div class="panel-body">
        <div class="table-responsive">
          <table class="table table-striped table-hover" id="comment-history">
            <thead>
              <tr>
                <th>#</th>
                <th>Comment</th>
                <th>Photo</th>
                <th>Time</th>
              </tr>
            </thead>
            <tbody>
              <% @user.comments.each do |comment| %>
                <tr>
                  <td><%= comment.id %></td>
                  <td><%= comment.content %></td>
                  <td><img style="width: 300px;" src="<%= comment.photo.image %>"
                    alt="24bbd4505fcbd433e528182d534b8118"></td>
                  <td><time class="timeago" datetime="<%= comment.created_at.strftime("%FT%T%z") %>"><%= comment.created_at.strftime("%FT%T%z") %></time></td>
                </tr>
              <% end %>
            </tbody>
          </table>
        </div>
        <!-- /.table-responsive -->
      </div>
      <!-- /.panel-body -->
    </div>
