<div class="row">
  <div class="col-lg-12">
    <h1 class="page-header">User manager</h1>
  </div>
  <!-- /.col-lg-12 -->
</div>

<div class="row">
  <div class="col-lg-12">
    <div class="panel panel-default">
      <div class="panel-heading">
        Users
      </div>
      <!-- /.panel-heading -->
      <div class="panel-body">
        <table width="100%" class="table table-striped table-hover" id="list-user">
          <thead>
            <tr>
              <th>#</th>
              <th>User name</th>
              <th>Email</th>
              <th>Photos</th>
              <th>Comments</th>
              <th>Likes</th>
              <th>Action</th>
            </tr>
          </thead>
          <tbody>
            <% if @users.any? %>
              <% @users.each do |user| %>
                <tr>
                  <th scope="row">1</th>
                  <td><img src="/assets/3a9bdd452ff107dd46c8f13be9596dd6-9ea5af2562ec360253630cc6da464d9b88a3afd403f9a563f6b8ac2de15d7982.jpg" style="width: 40px;height: 40px;border-radius: 50%;margin-right: 10px;" />
                  <%= user.username %></td>
                  <td><%= user.email %></td>
                  <td><%= user.photos.count %></td>
                  <td><%= user.comments.count %></td>
                  <td><%= user.likes.count %></td>
                  <td>
                    <%= link_to "Show", admin_user_path(user), class: "btn btn-info"  %>
                    <%= link_to "Delete", "#", class: "btn btn-danger"  %>
                  </td>
                </tr>
              <% end %>
            <% end %>
          </tbody>
        </table>
        <!-- /.table-responsive -->
      </div>
      <!-- /.panel-body -->
    </div>
    <!-- /.panel -->
  </div>
  <!-- /.col-lg-12 -->
</div>
